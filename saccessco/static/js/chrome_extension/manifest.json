{
  "manifest_version": 3,
  "name": "Saccesco-3",
  "version": "1.0",
  "description": "A Chrome extension with a floating button to listen and speak back.",
  "permissions": [
    "storage",
    "microphone",
    "tts"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "speech.js",
        "content.js",
        "configuration.js",
        "backend_communicator.js",
        "page_change_observer.js",
        "page_manipulator.js",
        "chat_module.js"
      ],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": ""
  }
}